<table class="table table-bordered ">
    <% if(perchase) { %>
        <form method="post" action="/purchase/purchase_process">
            <tr>
                <td rowspan="5"><img width="200px" height="250px" src="<%= product[0].image %>" alt="이미지"></td>
                <td><%= product[0].name %></td>
            </tr>
            <tr>
                <td><%= product[0].price %></td>
            </tr>
            <tr>
                <td><%= product[0].brand %></td>
            </tr>

            <tr>
                <td>수량: <input type="number" name="qty"></td>
            </tr>

            <tr>
                <td>
                    <button class="btn btn-outline-primary btn-sm" type="submit">결제</button>
                
                    <form method="post" action="/purchase/cart_process/<%= product[0].mer_id %>">
                        <button class="btn btn-outline-primary btn-sm" type="submit">장바구니</button>
                    </form>
                </td>
            </tr>
        </form>
        <% } else { %>
            <tr>
                <td rowspan="4"><img width="200px" height="250px" src="<%= product[0].image %>" alt="이미지"></td>
                <td>
                    <%= product[0].name %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= product[0].price %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= product[0].brand %>
                </td>
            </tr>

            <tr>
                <td><button class="btn btn-outline-primary btn-sm" type="button"
                        onclick="location.href='/purchase/detail/<%= product[0].mer_id %>'">구매</button>
                        <form method="post" action="/purchase/cart_process/<%= product[0].mer_id %>">
                            <button class="btn btn-outline-primary btn-sm" type="submit">장바구니</button>
                        </form>
                </td>
            </tr>
            <% } %>

</table>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>